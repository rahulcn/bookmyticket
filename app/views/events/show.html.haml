- users = @event.tickets.collect(&:user)
.row.show
	.col-md-9
		.boxed.well
			%h2
				= @event.title

			%button.btn.btn-labeled.btn-default.btn-sm{style: 'margin: 4px;font-size: 16px;'}
				.btn-label
					Starts at
				= @event.starts_at.strftime('%b %d, %Y at %H:%M %p')

			%button.btn.btn-labeled.btn-default.btn-sm{style: 'margin: 4px;font-size: 16px;'}
				.btn-label
					Ends at
				= @event.ends_at.strftime('%b %d, %Y at %H:%M %p')

			%hr
			= @event.desc
			%hr
			%p
				Tags:
				%a{href: "#"}
					%span.label.label-info Snipp
				%a{href: "#"}
					%span.label.label-info Bootstrap
				%a{href: "#"}
					%span.label.label-info UI
				%a{href: "#"}
					%span.label.label-info growth
				|
				%i.glyphicon.glyphicon-user
				%a{href: "#"} Admin
				|
				%i.glyphicon.glyphicon-calendar
				= @event.starts_at.strftime('%b %d, %Y at %H:%M %P')
				|
				%i.glyphicon.glyphicon-comment
				%a{href: "#"} 3 Comments
				|
				%i.glyphicon.glyphicon-share
				%a{href: "#"} 39 Shares
	.col-md-3
		.boxed.well{style: 'padding: 0px;'}
			%ul.attendee
				%li
					%i.glyphicon.glyphicon-user
					Attendee List
				- users.each do |user|
					%li{data: {id: user.id}}
						.avatar
							= image_tag avatar_url(user, {size: 20}), alt: user.name
						.name{style: 'display: inline-block;vertical-align: middle;'}
							= user.name ? user.name : 'Default Name'
							%br
							= user.email
				- if users.empty?
					.empty
						No Attendees yet.

